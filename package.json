{
  "name": "jahlgren.eu",
  "version": "1.0.0",
  "description": "Description",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "css": "npm-run-all css-lint css-compile css-prefix css-minify",
    "css-compile": "node-sass --include-path node_modules --output-style expanded --source-map true --source-map-contents true --precision 6 resources/scss/core.scss data/build/css/core.css ",
    "css-fix": "stylelint \"resources/scss/**/*.scss\" --config resources/scss/.stylelintrc.json --fix",        
    "css-lint": "stylelint \"resources/scss/**/*.scss\" --config resources/scss/.stylelintrc.json",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output public/css/core.min.css data/build/css/core.prefix.css",
    "css-prefix": "postcss --use autoprefixer --output data/build/css/core.prefix.css data/build/css/core.css",
    "js": "npm-run-all js-lint js-compile js-minify",
    "js-fix": "eslint --fix resources/js",
    "js-compile": "rollup --config resources/rollup.config.js",
    "js-lint": "eslint resources/js",
    "js-minify": "uglifyjs --compress --mangle --source-map --output public/js/core.min.js  data/build/js/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jailgreen/jahlgren.eu.git"
  },
  "keywords": [],
  "author": "jailgreen <jukka@jahlgren.eu>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/jailgreen/jahlgren.eu/issues"
  },
  "homepage": "https://github.com/jailgreen/jahlgren.eu#readme",
  "dependencies": {
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3",
    "tooltip.js": "^1.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "clean-css-cli": "^4.1.11",
    "eslint": "^4.19.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "rollup": "^0.58.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.1.0",
    "uglify-es": "^3.3.9"
  }
}
